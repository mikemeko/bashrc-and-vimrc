" line numbering
set nu

" syntax coloring
syntax on

" indentation
filetype plugin indent on
set autoindent

" right hand margin
set colorcolumn=81

" search: case insensitiveh
set ic

" search: highlight
set hls

" show current mode
set laststatus=2

" show tabs and trailing whitespace
set list listchars=tab:\#;,trail:\#

" soft wrap text
set lbr

" tab: replace with whitespace
set expandtab
set showmode

" tab: width
set shiftwidth=2
set tabstop=2

